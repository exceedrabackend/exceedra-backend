{
  "name": "damage-claim-automation",
  "version": "1.0.0",
  "description": "Automated damage claim management system for Airbnb properties",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd backend && npx prisma generate",
    "start": "cd backend && npx prisma migrate deploy && npx prisma db seed && node server.js",
    "migrate": "cd backend && npx prisma migrate dev",
    "migrate:deploy": "cd backend && npx prisma migrate deploy",
    "generate": "cd backend && npx prisma generate",
    "seed": "cd backend && node prisma/seed.js",
    "postinstall": "npm run generate"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@supabase/supabase-js": "^2.38.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0"
  },
  "keywords": [
    "airbnb",
    "property-management",
    "damage-claims",
    "automation"
  ],
  "author": "Your Company",
  "license": "MIT"
}
